{
    "name": "backendtea/failuretest",
    "description": "Allow failing PHPUnit tests and keep a close eye on issues until they are fixed.",
    "keywords": ["php", "phpunit", "unit testing", "failures"],
    "type": "library",
    "support": {
        "issues": "https://github.com/BackEndTea/FailureTest/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Gert de Pagter",
            "email": "gertp93@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "phpunit/phpunit": "^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "FailureTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FailureTest\\Test\\": "tests/"
        }
    }
}
